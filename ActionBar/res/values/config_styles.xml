        <item name="android:background">@drawable/pet_config_default</item>
        <!-- #00E3E3 -->
    </style>

    <style name="configItemTextStyle_TopLeft" parent="configItemTextStyle">
        <item name="android:background">@drawable/pet_config_tl_corner</item>
    </style>

    <style name="configItemTextStyle_TopRight" parent="configItemTextStyle">
        <item name="android:background">@drawable/pet_config_tr_corner</item>
    </style>

    <style name="configItemTextStyle_BottomRight" parent="configItemTextStyle">
        <item name="android:background">@drawable/pet_config_br_corner</item>
    </style>

    <style name="configItemTextStyle_BottomLeft" parent="configItemTextStyle">
