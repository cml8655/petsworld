<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/circle_border"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/pets_dialy_share_username_height"
                android:layout_height="@dimen/pets_dialy_share_username_height"
                android:src="@drawable/car" />

            <TextView
                android:id="@+id/daily_share_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pets_dialy_share_username_height"
                android:gravity="center|left"
                android:text="小妹子逛街的身份都是睡得好" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/daily_share_info_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pet_daily_share_divider"
                android:src="@drawable/lock" />
        </LinearLayout>

        <!-- 操作区 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/daily_share_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="赞" />

            <Button
                android:id="@+id/daily_share_cai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/daily_share_zan"
                android:text="踩" />

            <Button
                android:id="@+id/daily_share_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/daily_share_cai"
                android:text="评论" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评论(100)" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="哈哈 非常好" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恩恩整的很好" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="哦哦哦" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>