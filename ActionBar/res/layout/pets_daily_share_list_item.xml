<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_border"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/daily_share_user_img"
            android:layout_width="@dimen/pets_dialy_share_username_height"
            android:layout_height="@dimen/pets_dialy_share_username_height"
            android:src="@drawable/car" />

        <TextView
            android:id="@+id/daily_share_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pets_dialy_share_username_height"
            android:gravity="center|left"
            android:text="小妹子逛街的身份都是睡得好" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/daily_share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/daily_share_imgview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pet_daily_share_divider"
            android:src="@drawable/lock" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/daily_share_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="赞" />

        <Button
            android:id="@+id/daily_share_cai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/daily_share_zan"
            android:text="踩" />

        <Button
            android:id="@+id/daily_share_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/daily_share_cai"
            android:text="评论" />
    </RelativeLayout>

</LinearLayout>